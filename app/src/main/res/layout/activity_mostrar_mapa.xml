<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarMapa">

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/btnItaocara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itaocara"
            android:layout_marginHorizontal="10dp"
            android:onClick="onClickItaocara"/>

        <Button
            android:id="@+id/btnVicosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vicosa"
            android:layout_marginHorizontal="15dp"
            android:onClick="onClickVicosa"/>

        <Button
            android:id="@+id/btnDPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dpi"
            android:layout_marginHorizontal="15dp"
            android:onClick="onClickDPI"/>

    </LinearLayout>

    <fragment
        android:id="@+id/mapa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn"/>

</RelativeLayout>